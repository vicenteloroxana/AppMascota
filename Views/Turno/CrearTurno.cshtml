<h1 class="text-center">Formulario Alta de Turno</h1>
<div class="container  mt-3">
    <form asp-action="GuardarTurno" asp-controller="Turno" method="POST"  >
        <div class="contenedor-form d-flex justify-content-between">
            <div class="fomulario-propietario ">
                <h2 class="text-center">Datos del Propietario</h2>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="NombrePersona">Nombre</label>
                        <input name="NombrePersona "type="text" class="form-control" id="NombrePersona" placeholder="Nombre">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Apellido">Apellido</label>
                        <input name="Apellido"type="text" class="form-control" id="Apellido" placeholder="Apellido">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="DNI">DNI</label>
                        <input name="DNI"type="number" class="form-control" id="DNI" placeholder="DNI">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Telefono">Telefono</label>
                        <input name="Telefono"type="tel" class="form-control" id="Telefono" placeholder="Telefono">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Domicilio">Domicilio</label>
                    <input name="Domicilio" type="text" class="form-control" id="Domicilio" placeholder="Domicilio">
                </div>
                
                <div class="form-group ">
                    <label for="Correo">Correo Electronico</label>
                    <input name="Correo"type="email" class="form-control" id="Correo" placeholder="Correo Electronico">
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="Fecha">Fecha</label>
                        <input name="Fecha" type="date" class="form-control" id="Fecha" >
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Hora">Hora</label>
                        <input name="Hora" type="time" class="form-control" id="Hora" >
                    </div>
                </div>
                
            </div >
            <div class="formulario-mascota" > 
                <h2 class="text-center">Datos de la Mascota</h2>
                <div class="form-group">
                    <label for="NombreMascota">Nombre</label>
                    <input name="NombreMascota"type="text" class="form-control" id="NombreMascota" placeholder="Nombre">
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="SSP">SSP</label>
                        <input name="SSP" type="text" class="form-control" id="SSP" placeholder="SSP">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="SexoMascota">Sexo</label>
                        <input name="SexoMascota" type="text" class="form-control" id="SexoMascota" placeholder="Sexo">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="EdadMascota">Edad</label>
                        <input name="EdadMascota" type="number" class="form-control" id="EdadMascota" placeholder="Edad">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Pelaje">Pelaje</label>
                        <input name="Pelaje" type="text" class="form-control" id="Pelaje" placeholder="Pelaje">
                    </div>
                </div>
            </div>
        </div>
        <div class="container d-flex justify-content-center mt-3">   
            <button type="submit" class="btn btnAltaTurno btn-md">Enviar</button>
        </div>
    </form>
     
</div>
 